<!doctype html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>L'escale beaut√©</title>
    <link rel="stylesheet" href="{{ glb['SRC_ROOT'] }}css/admin.css">
    <link rel="stylesheet" href="{{ glb['SRC_ROOT'] }}css/imagehover/imagehover.css">
    <script defer src="{{ glb['SRC_ROOT'] }}js/vendor/fontawesome-all.js"></script>
</head>

<body id="login_body">
<div id="background_theme">
    <div class="grid-container">
        <div class="grid-x grid-padding-x">
            <div class="large-offset-4 medium-offset-3 small-offset-0 large-4 medium-6 small-12">
                <div id="log-in-form">
                    <form method="post">
                        <h4 class="text-center">Connexion</h4>
                        <label for="login">Login <input type="text" name="login" id="login"></label>
                        <label for="mdp">Mot de passe <input type="password" name="mdp" id="mdp"> </label>
                        <p><input type="submit" class="button expanded" value="Connexion"></p>
                        {% if session.notification %}
                            {{ showAlert(session.notification.type, session.notification.message, session.notification.titre)|raw }}
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="{{ glb['SRC_ROOT'] }}js/vendor/jquery.js"></script>
<script src="{{ glb['SRC_ROOT'] }}js/vendor/what-input.js"></script>
<script src="{{ glb['SRC_ROOT'] }}js/vendor/foundation.js"></script>
<script src="{{ glb['SRC_ROOT'] }}js/vendor/jquery.mask.js"></script>
<script src="{{ glb['SRC_ROOT'] }}js/vendor/jquery.matchHeight.js" type="text/javascript"></script>
<script src="{{ glb['SRC_ROOT'] }}js/base.js"></script>
{% block javascript %}
{% endblock %}
</body>

</html>